
<section class="row">
  <div class="grid_12">
    <h1>Jolly and Friends Server List</h1>
  </div>
</section>

<% @servers.each do |server| %>

<section class="row" class="margin-top: 10px;">
  <div class="grid_12">
    <h3 style="margin-top:0;"><%= server[:name] %></h3>
    
    <a class="btn" href="/servers/<%= server.id %>/join">Join Server</a>
    <a class="btn" href="/servers/<%= server.id %>">Server Details</a>

    <table class="viz" data-graph-container-before="1", data-graph-type="column">
    <thead>
      <tr>
        <th>Time</th>
        <th>Players</th>
        <th>Ping</th>
      </tr>
    </thead>

    <tbody>

      <% server.last_24_hour_statuses.each_with_index do |status,i| %>
      <tr>
        <td><%= i == 23 ? "Now" : "#{23 - i} hours ago" %></td>
        <td><%= status[:player_count] %></td>
        <td>0</td>
      </tr>
      <% end %>

    </tbody>

    </table>

  </div>
</section>

<% end %>
