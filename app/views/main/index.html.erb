
<section class="row-max">
  <div class="grid_12 title-row">
    <h1>Jolly and Friends</h1>
    <p>Spacebuild3 and DarkRP</p>
  </div>
</section>

<section class="row">
  <div class="grid_4">
    <h2>New Feed</h2>
    <ul class="twitter">
<% (1...5).each do |i| %>
      <li class="tweet">
        <img src="http://placehold.it/64x64" width="64" height="auto" class="user" />

        <div class="title">
          <span class="text">Jolly and Friends</span>
          <a class="source" href="#">@JollyAndFriends</a>
          <span class="time">1h</span>
        </div>

        <p class="text">Some update about the server <a href="#">#gmod</a></p>
      </li>
<% end %>
    </ul>
  </div>

  <div class="grid_4">
    <h2>Servers</h2>

<% @servers.each do |server| %>
    <% if server[:status] == "online" %>
    <h4><%= link_to server[:name], server[:join], :style => "text-decoration: none;" %></a></h4>
    <% else %>
    <h4 style="color:red;"><%= server[:name] %></a></h4>
    <% end %>
    <%= server[:status].capitalize %> with <%= server[:players] %> players.<br />
    <%= link_to "Steam Workshop Collection", server[:collection], :target => "_blank" %><br />

<% end %>
  </div>

  <div class="grid_4">
    <h2>Screen Shots</h2>

<% (1..10).each do |i| %>
      <img class="screenshot" src="http://placehold.it/64x64" />
<% end %>

  </div>
</section>